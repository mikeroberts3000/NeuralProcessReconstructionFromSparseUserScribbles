<Window x:Class="Mojo.Wpf.LoadSaveSegmentationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        MinHeight="150" MinWidth="1283" MaxHeight="150" MaxWidth="1283" WindowStartupLocation="CenterScreen" >
    
    <Grid Background="{DynamicResource {x:Static SystemColors.ControlBrushKey}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="5"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="5"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="231"></ColumnDefinition>
            <ColumnDefinition Width="1030"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Label Grid.Row="1" Grid.ColumnSpan="2" Margin="0,0,11,0" Content="Color Images Directory:"/>
        <Label Grid.Row="2" Grid.ColumnSpan="2" Margin="0,0,11,0" Content="ID Images Directory:"/>

        <TextBox Name="ColorImages" Grid.Row="1" Grid.Column="1" />
        <TextBox Name="IdImages"    Grid.Row="2" Grid.Column="1" />

        <Button Name="Ok" Grid.Row="3" Grid.Column="1" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="90" Click="OkClick">OK</Button>        
    </Grid>
</Window>
